{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@proto/*": [
        "src/proto/*"
      ]
    },
    "baseUrl": "./httpfs",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "es5",
      "dom"
    ]
  },
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
